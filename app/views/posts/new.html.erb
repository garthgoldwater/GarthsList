<section class="outer-container">
  <h2 class="page-title">Make a new post</h2>
  <div class="form">
    <%= form_for @post do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>
      <%= form.label :price %>
      <%= form.text_field :price %>
      <%= form.label :body %>
      <%= form.text_area :body %>
      <%= form.label :category %>
      <%= form.collection_select :category_id, @categories, :id, :name %>
      <%= form.label :region %>
      <%= form.collection_select :region_id, @regions, :id, :name %>
      <%= form.submit %>
    <% end %>
  </div>
</section>
