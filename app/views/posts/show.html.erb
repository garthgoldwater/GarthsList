<h2><%= @post.title %></h2>
<h4> by <%= mail_to @user.email %> </h4>
<p><%= @post.body %></p>

<% if @user == current_user %>
  <%= button_to "Delete this post", :post, method: :delete%>
<% end %>
<footer>
  Category: <%= link_to @category.name, @category %>
  Region: <%= link_to @region.name, @region %>
</footer>

