<h2>Admin Panel</h2>
<div>
  <%= form_for @region do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.submit "Add new region" %>
  <% end %>
</div>
<div>
  <h3>Regions</h3>
  <ul>
    <%= render @regions %>
  </ul>
</div>
<div>
  <%= form_for @category do |f| %>
    <%= f.label "Name:", :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
</div>
