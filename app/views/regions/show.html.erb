<section class="outer-container">
  <h2 class="page-title">Browse by category in <%= @region.name.capitalize %>,</h2>
  <div class="list-grid">
    <ul>
      <%= render @categories %>
    </ul>
  </div>
  <h2 class="page-title">or, browse<em> all</em> of <%= @region.name.capitalize %>'s recent posts.</h2>
  <div class="list-grid">
    <%= render Post.recent_posts_for_region(@region) %>
  </div>
</section>
