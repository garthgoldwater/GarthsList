<!DOCTYPE html>
<html>
<head>
  <title>GarthsList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="icons">
  <span class="devicons devicons-bing_small"></span>
</div>
<section class="header">
  <div class="logo">
    <%= link_to :landing do %>
      <div class="logo-image"></div>
    <% end %>
    <div class="tagline">
      <p><em>"We're not worthy!"</em></p>
    </div>
  </div>
  <div class="nav">
    <% if signed_in? %>
      <%= render "nav" %>
    <% else %>
      <nav>
      <%= link_to "Sign Up", [:new, :user], class: "button-left" %>
      <%= link_to "Sign In", [:new, :session], class: "button-right" %>
      </nav>
    <% end %>
  </div>
</section>

  <% if flash.any? %>
    <div class="error">
      <span><%= flash[:error] %></span>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
